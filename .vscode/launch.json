{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Backend/FinTrack.API/bin/Debug/net8.0/FinTrack.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Backend/FinTrack.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "FINTRACK_JWT_KEY": "ThisIsASecretKeyForFinTrackProject2025_MustBeLongEnough_ToBeSecure"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
